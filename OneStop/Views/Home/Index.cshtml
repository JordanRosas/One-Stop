@model IEnumerable<OneStop.Models.JobTicket>

@{
    ViewData["Title"] = "Index";
}

<div class=" container">
    <div class=" row">
        <div class="col-sm">
            <h2>Interested</h2>
            <p>
                <a asp-action="Create">Create New</a>
            </p>
            @foreach (var item in Model)
            {
                @if (item.StatusId == 1)
                {

                    <div>
                        <p>@item.Company.CompanyName</p>
                        <p>@item.Position</p>
                        <a asp-action="Edit" asp-route-id="@item.JobTicketId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.JobTicketId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.JobTicketId">Delete</a>
                    </div>
                }
            }
        </div>
        <div class="col-sm">
            <h2>Applied</h2>
            <p>
                <a asp-action="Create">Create New</a>
            </p>
            @foreach (var thing in Model)
            {
                @if (thing.StatusId == 2)
                {

                    <div>
                        <p>@thing.Company.CompanyName</p>
                        <p>@thing.Position</p>

                        <a asp-action="Edit" asp-route-id="@thing.JobTicketId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@thing.JobTicketId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@thing.JobTicketId">Delete</a>
                    </div>
                }
            }
        </div>
        <div class="col-sm">
            <h2>Interviewed</h2>
            <p>
                <a asp-action="Create">Create New</a>
            </p>
        </div>
        <div class="col-sm">
            <h2>Rejected</h2>
            <p>
                <a asp-action="Create">Create New</a>
            </p>
        </div>
        <div class="col-sm">
            <h2>Hired</h2>
            <p>
                <a asp-action="Create">Create New</a>
            </p>
        </div>
    </div>
</div>





